<html>
	<body>
		<%= render 'layouts/header' %>
		<div class="content_body">
			<div class="content_interior"><div class="left_column"><div class="navigation">
			<div id="avatar">
				<h1>Families stick Together</h1>
				<img src='/assets/images/family.png'>
			</div>
			<br>
		<%= render 'users/menu' %>

		</div>

		<div class="navigationbtm"></div>
		 <br />
		 <img src="/assets/images/family.png" alt="sample 2" />
		 </div>
				<div class="right_column">
					<div class='flash'>
						<%= flash_helper %>
					</div>
					<% if current_user = @post.user %>
						<h5>Edit your post</h5>
						<div class="hr"></div>
						<div class='listings'>
							<h1>Editing post</h1>

							<%= render 'form' %>

							<%= link_to 'Show', @post %> |
							<%= link_to 'Back', posts_path %>
					<% else %>
						<h5>You cannot edit this post</h5>
						<div class="hr"></div>
						<h7><%= @post.title %></h7><br />
								<%= @post.text %>
					<% end %>
						</div>
			
			</div>
			<div class='right_side'>

			</div>
		<br clear="all" /></div>

		<%= render 'users/footer' %>
	</body>
</html>
