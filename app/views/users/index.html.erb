<html>
	<head>
		<script type="text/javascript">

			var _gaq = _gaq || [];
			_gaq.push(['_setAccount', 'UA-30027871-1']);
			_gaq.push(['_trackPageview']);

			(function() {
				var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
				ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
				var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
			})();

		</script>
		<%= render 'layouts/header' %>
	</head>
	<body>
		<div class="content_body">
			<div class="content_interior"><div class="left_column"><div class="navigation">
				<div id="avatar">
					 <img src="assets/images/family.png" alt="sample 2" />
				</div>
			<br>
		<%= render 'menu' %> 
			</div>
		<div class="navigationbtm"></div>
		 <br />
		</div>
			<div class="right_column">
				<%= pluralize(@users.count, "Member") %>
				<ul id="user_list">
					<div class='flash'>
						<%= flash_helper %>
					</div>
					<% if current_user %>
						<% @users.each do |user| %>
								<li <% if @users.first == user %> class="first"<% end %>>
									<% if user.avatar.file? %>
										<%= image_tag user.avatar.url(:thumb) %>
									<% else %>
										<img src="assets/images/nopic2.gif">
									<% end %>
								<div class="user_message_container">
									<%= link_to user.username.capitalize, user.username %>
									<% if @online %>
										<font color='red'>Online</font><br />
									<% end %>
									<% if user.county.present? && user.state.present? %>
										<b><%= h user.county %>, <%= user.state %></b>
									<% end %>
									<div class="button">
										<% unless user == current_user || current_user.requested_friends.include?(user) || current_user.friends.include?(user) || current_user.pending_friends.include?(user) %>
											<%= link_to "Add", friendships_path(:friend_id => user), :method => :post %>
										<% end %>
									</div><br />
									<%= h user.about_us %>
							</div>
							<div class="clear"></div>
							</li>
					<% end %>
				<% end %>

					<% unless current_user %>
						<% @users.each do |user| %>
							<li <% if @users.first == user %>class="first"<% end %>>
										<% if user.avatar.file? %>
											<%= image_tag user.avatar.url(:thumb) %>
										<% else %>
											<img src="/assets/images/nopic2.gif">
										<% end %>
										<div class="user_message_container">
											<%= link_to user.username.capitalize, user.username %>
											<% if user.state.present? && user.county.present? %>
												<b><%= h user.county %>, <%= user.state %></b><br />
												<%= h user.about_us %>
											<% else %>
												<b><%= h user.state %></b>
											<% end %>
									</div>
									<div class="clear"></div>
						<% end %>
							</li>
					<% end %>
				<%= will_paginate @users %>
		</div>
			<div class='right_side'>

			</div>
		<br clear="all" /></div>

		<%= render 'footer' %>
	</body>
</html>
