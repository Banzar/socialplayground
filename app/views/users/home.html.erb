<html>
	<body>
		<head>
			<title><% if current_user.first_name.present? %><%= current_user.first_name.capitalize %> <%=current_user.last_name.capitalize %><% else %>
<%= current_user.username.capitalize %><% end %>
			</title>
		<link rel="icon" 
				  type="image/ico" 
				  href="/assets/images/logo.ico">
		</head>
		<div class="header">
			<%= render 'topmenu' %>
  		<div class="header_interior">
				<img src="assets/images/logo.png" alt="Logo" width="44" height="44" style="float:left; margin-right:10px;" /> 
  			<h1 class="title">Our Children Play</h1>
			</div>
		</div>
		<div class="content_body">
  		<div class="content_interior">
				<div class="left_column">
					<div class="navigation">
						<div id="avatar">
							<h1><%= current_user.username %></h1>
								<%= image_tag current_user.avatar.url(:small) %>
								<p><%= useless_info %></p>
						</div>
							<% unless current_user.pending_friends.empty? %>
								<div class='request'>
									<%= link_to pluralize(current_user.pending_friends.length, "Friend Request"), friends_url %>
								</div>
							<% end %>
						<br>
							<%= render 'menu' %><br />
							<% unless @events.count == 0 %>
								<b>Social Events:</b>
									<% @events.each do |event| %>
										<div class="user_events">
											<li>
												<div class='button'>
													<%= event.date %>
												</div>
												<div class='event_name'>
													<%= link_to event.user.username.capitalize, "/#{event.user.username}" %> :
													<%= link_to event.event_name, "/event/#{event.id}" %>
												</div><div class='clear'></div>
											</li>
										</div>
									<% end %>
								<% end %>
							</div>
							<div class="navigationbtm"></div>
 								<br />
 								<img src="/assets/images/family.png" alt="sample 2" />
 		</div>
    <div class="right_column">
			<h3>Whats on your mind?</h3>
			<%= form_for Feed.new do |f| %>
				<div id="new_feed_form">
					<%= f.text_area :message %>
					<div id="latest_message">
						<% if @last_feed.present? %>
							<%= @last_feed.message %>
							<div class="time_ago">
								<%= time_ago_in_words @last_feed.created_at %> ago
							</div>
						<% else %>
							Your latest posting will be shown here.
							<%= time_ago_in_words @user.created_at %> ago
						<% end %>
					</div>
					<div id="submit_button_container">
						<%= f.submit "Post" %>
					</div>
					<div class="clear"></div>
				</div>
		<div class="hr"></div>
			<% end %>
		<div class='flash'>
			<%= flash_helper %>
		</div>
		<br />
		<% if @feeds.count == 0 %>
			<%= User.find(1).about_us %>
		<% end %>
		<%= render :partial => 'feeds_list', :locals => { :feeds => @feeds } %>
			<% if @feeds.count >= 8 %>
				<p><%= link_to "Read all feeds", feeds_url %></p>
			<% end %>
  </div>
	<div class='right_side'>

	</div>
</div>
<br clear="all" /></div>
<%= render 'footer' %>
</body>
</html>

